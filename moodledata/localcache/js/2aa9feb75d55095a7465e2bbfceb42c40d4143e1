onload=function(){transformForm();var typeField=document.getElementById('menutype');var sequenceField=document.getElementById('menusequence');if(typeField.addEventListener){typeField.addEventListener('change',transformForm,!1);sequenceField.addEventListener('change',transformForm,!1)}else{typeField.attachEvent('onchange',transformForm);sequenceField.attachEvent('onchange',transformForm)}}
function transformForm(event){var typeField=document.getElementById('menutype');var lengthField=document.getElementById('length');var decimalsField=document.getElementById('decimals');var notnullField=document.getElementById('menunotnull');var sequenceField=document.getElementById('menusequence');var defaultField=document.getElementById('default');var lengthTip=document.getElementById('lengthtip');var decimalsTip=document.getElementById('decimalstip');decimalsField.disabled=!1;notnullField.disabled=!1;sequenceField.disabled=!1;defaultField.disabled=!1;if(sequenceField.value=='1'){notnullField.disabled=!0;notnullField.value='1';defaultField.disabled=!0;defaultField.value=''}
switch(typeField.value){case '1':lengthTip.innerHTML=' 1...20';lengthField.disabled=!1;decimalsTip.innerHTML='';decimalsField.disabled=!0;decimalsField.value='';break;case '2':lengthTip.innerHTML=' 1...20';lengthField.disabled=!1;decimalsTip.innerHTML=' 0...length or empty';break;case '3':lengthTip.innerHTML=' 1...20 or empty';lengthField.disabled=!1;decimalsTip.innerHTML=' 0...length or empty';break;case '4':lengthTip.innerHTML=' 1...1333';lengthField.disabled=!1;decimalsTip.innerHTML='';decimalsField.disabled=!0;decimalsField.value='';sequenceField.disabled=!0;sequenceField.value='0';break;case '5':lengthTip.innerHTML='';lengthField.disabled=!0;decimalsTip.innerHTML='';decimalsField.disabled=!0;decimalsField.value='';sequenceField.disabled=!0;sequenceField.value='0';defaultField.disabled=!0;defaultField.value='';break;case '6':lengthTip.innerHTML='';lengthField.disabled=!0;decimalsTip.innerHTML='';decimalsField.disabled=!0;decimalsField.value='';sequenceField.disabled=!0;sequenceField.value='0';defaultField.disabled=!0;defaultField.value='';break;case '7':lengthTip.innerHTML='';lengthField.disabled=!0;lengthField.value='';decimalsTip.innerHTML='';decimalsField.disabled=!0;decimalsField.value='';sequenceField.disabled=!0;sequenceField.value='0';defaultField.disabled=!0;defaultField.value='';break}}